<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="postgresql">
        <description>
            Hibernate using Oracle
        </description>
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>nl.jtosti.projects.hermes.models.User</class>
        <class>nl.jtosti.projects.hermes.models.Location</class>
        <class>nl.jtosti.projects.hermes.models.Image</class>
        <class>nl.jtosti.projects.hermes.models.Promotion</class>
        <class>nl.jtosti.projects.hermes.models.Type</class>
        <class>nl.jtosti.projects.hermes.models.Screen</class>


        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="javax.persistence.jdbc.url"
                      value="jdbc:postgresql://localhost:5432/hermes"/>
            <property name="javax.persistence.jdbc.user" value=""/>
            <property name="javax.persistence.jdbc.password" value=""/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL95Dialect"/>

            <property name="hibernate.show_sql" value="true"/>    <!-- true: shows each SQL -->
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.enable_lazy_load_no_trans" value="true"/>
            <!--<property name="hibernate.hbm2ddl.auto" value="create" />  &lt;!&ndash; create: creates database &ndash;&gt;-->

        </properties>

    </persistence-unit>

</persistence>
